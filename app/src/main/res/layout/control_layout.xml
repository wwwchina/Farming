<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/open_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开机"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/four_round_anngle"
        android:textColor="@color/white"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/control_speed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="速度"
                android:textSize="15dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/control_speed_l"
                    android:layout_width="@dimen/speed_dismens"
                    android:layout_height="@dimen/speed_dismens"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle_selector"
                    android:gravity="center"
                    android:text="低"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/control_speed_m"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/control_speed_m"
                    android:layout_width="@dimen/speed_dismens"
                    android:layout_height="@dimen/speed_dismens"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle_selector"
                    android:gravity="center"
                    android:text="中"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/control_speed_l"
                    app:layout_constraintRight_toLeftOf="@id/control_speed_h"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/control_speed_h"
                    android:layout_width="@dimen/speed_dismens"
                    android:layout_height="@dimen/speed_dismens"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle_selector"
                    android:gravity="center"
                    android:text="高"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/control_speed_m"
                    app:layout_constraintRight_toLeftOf="@id/control_speed_s"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/control_speed_s"
                    android:layout_width="@dimen/speed_dismens"
                    android:layout_height="@dimen/speed_dismens"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle_selector"
                    android:gravity="center"
                    android:text="停"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/control_speed_h"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/wind_speed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="风度"
                android:textSize="15dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/control_wind_l"
                    android:layout_width="@dimen/speed_dismens"
                    android:layout_height="@dimen/speed_dismens"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle_selector"
                    android:gravity="center"
                    android:text="低"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/control_wind_m"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/control_wind_m"
                    android:layout_width="@dimen/speed_dismens"
                    android:layout_height="@dimen/speed_dismens"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle_selector"
                    android:gravity="center"
                    android:text="中"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/control_wind_l"
                    app:layout_constraintRight_toLeftOf="@id/control_wind_h"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/control_wind_h"
                    android:layout_width="@dimen/speed_dismens"
                    android:layout_height="@dimen/speed_dismens"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle_selector"
                    android:gravity="center"
                    android:text="高"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/control_wind_m"
                    app:layout_constraintRight_toLeftOf="@id/control_wind_s"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/control_wind_s"
                    android:layout_width="@dimen/speed_dismens"
                    android:layout_height="@dimen/speed_dismens"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle_selector"
                    android:gravity="center"
                    android:text="停"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/control_wind_h"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/control_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>